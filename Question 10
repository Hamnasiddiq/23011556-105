using System;

namespace ArraySearchElement
{
    class Program
    {
        static void Main(string[] args)
        {
            int[] numbers = new int[10];

            Console.WriteLine("Enter 10 integers:");

            for (int i = 0; i < 10; i++)
            {
                Console.Write($"Element {i + 1}: ");
                numbers[i] = Convert.ToInt32(Console.ReadLine());
            }

            Console.Write("\nEnter a number to search: ");
            int searchNumber = Convert.ToInt32(Console.ReadLine());

            bool found = false;

            for (int i = 0; i < numbers.Length; i++)
            {
                if (numbers[i] == searchNumber)
                {
                    found = true;
                    Console.WriteLine($"\nNumber {searchNumber} found at position {i + 1}.");
                    break;
                }
            }

            if (!found)
            {
                Console.WriteLine($"\nNumber {searchNumber} not found in the array.");
            }

            Console.ReadLine(); // keeps console window open
        }
    }
}
